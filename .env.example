############################################################
#   RealLife Backend Environment Example
#   -------------------------------------
#   이 파일은 예시 파일입니다.
#   실제 실행 시에는 ".env"로 복사해서 사용하세요.
#
#   cp .env.example .env
############################################################


############################
# MySQL
############################
MYSQL_ROOT_PASSWORD=CHANGE_ME_ROOT
MYSQL_DATABASE=backend
MYSQL_USER=backend
MYSQL_PASSWORD=backendpw
MYSQL_PORT=3307


############################
# Spring Profile
############################
# dev   : 로컬/개발 기본
# prod  : 운영(HTTPS + 도메인)
SPRING_PROFILES_ACTIVE=dev


############################
# Redis
############################
SPRING_DATA_REDIS_HOST=redis
SPRING_DATA_REDIS_PORT=6379


############################
# JWT
############################
# 최소 64자 이상 랜덤 문자열 권장
JWT_SECRET=CHANGE_ME_TO_LONG_RANDOM_SECRET_KEY_64_CHARS_MINIMUM
JWT_ACCESS_TOKEN_EXP_MINUTES=60
JWT_REFRESH_TOKEN_EXP_DAYS=14


############################
# File Upload
############################
FILE_UPLOAD_DIR=/app/uploads


############################
# Public Base URL
############################
# 링크 생성, 문서, 리다이렉트 등에 사용
# dev: http://localhost
# prod: https://your-domain.com
PUBLIC_BASE_URL=http://localhost


############################
# CORS
############################
# 프론트 주소를 반드시 추가해야 로그인/refresh-cookie/SSE 동작함
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://localhost:3000


############################
# Cookie (인증 매우 중요)
############################
# ===== 개발 환경(도메인 없음 / http) =====
# http 환경에서는 반드시 Secure=false + SameSite=Lax 권장
APP_COOKIE_SAME_SITE=Lax
APP_COOKIE_SECURE_MODE=false

# ===== 운영 환경(도메인 + HTTPS) =====
# 아래처럼 변경 권장
# APP_COOKIE_SAME_SITE=None
# APP_COOKIE_SECURE_MODE=true
# APP_COOKIE_DOMAIN=.example.com


############################
# GHCR (서버 배포 시 필요)
############################
# backend/docker-compose.prod.yml 에서 image 경로를 만들 때 사용
# 예: ghcr.io/${GHCR_REPO}/reallife-app:latest
# 예: ghcr.io/${GHCR_REPO}/reallife-nginx:latest
GHCR_REPO=YOUR_GITHUB_OWNER/YOUR_REPO